<Window x:Class="AutomaticUpdater.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutomaticUpdater â€” Settings"
        Width="380" Height="320"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Autostart -->
        <CheckBox x:Name="ChkAutostart"
                  Grid.Row="0"
                  Content="Start with Windows"
                  Margin="0,0,0,12"/>

        <!-- Schedule GroupBox -->
        <GroupBox Grid.Row="1" Header="Update Schedule" Padding="8">
            <StackPanel>
                <CheckBox x:Name="ChkScheduleEnabled"
                          Content="Enable scheduled updates"
                          Margin="0,0,0,8"
                          Checked="OnScheduleEnabledChanged"
                          Unchecked="OnScheduleEnabledChanged"/>

                <StackPanel x:Name="PnlScheduleOptions">
                    <!-- Frequency -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <RadioButton x:Name="RbDaily" Content="Daily"
                                     GroupName="Frequency"
                                     Checked="OnFrequencyChanged"
                                     Margin="0,0,16,0" VerticalAlignment="Center"/>
                        <RadioButton x:Name="RbWeekly" Content="Weekly"
                                     GroupName="Frequency"
                                     Checked="OnFrequencyChanged"
                                     VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Day of week (Weekly only) -->
                    <StackPanel x:Name="PnlDayOfWeek" Orientation="Horizontal"
                                Margin="0,0,0,6" Visibility="Collapsed">
                        <TextBlock Text="Day:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="CbDayOfWeek" Width="100"/>
                    </StackPanel>

                    <!-- Time -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Time:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="CbHour" Width="55"/>
                        <TextBlock Text=":" VerticalAlignment="Center" Margin="4,0"/>
                        <ComboBox x:Name="CbMinute" Width="55"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="BtnSave" Content="Save" Width="80"
                    IsDefault="True" Click="OnSave" Margin="0,0,8,0"/>
            <Button Content="Cancel" Width="80"
                    IsCancel="True" Click="OnCancel"/>
        </StackPanel>
    </Grid>
</Window>
